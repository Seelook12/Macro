<Window x:Class="Macro.Views.CoordinatePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Normal"
        WindowStartupLocation="Manual"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Cursor="Cross"
        Title="CoordinatePickerWindow">
    <Grid Background="Black">
        <!-- 캡처된 이미지를 1:1로 표시 -->
        <Image x:Name="CaptureImage" Stretch="Fill"/>
        
        <!-- 안내 텍스트 -->
        <Border HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" 
                Background="#CC000000" Padding="20,10" CornerRadius="10" IsHitTestVisible="False">
            <TextBlock Text="원하는 위치를 클릭하세요 (ESC: 취소)" Foreground="White" FontSize="20" FontWeight="Bold"/>
        </Border>
    </Grid>
</Window>
