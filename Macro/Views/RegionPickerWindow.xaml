<Window x:Class="Macro.Views.RegionPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowState="Normal"
        WindowStartupLocation="Manual"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Cursor="Cross"
        Title="RegionPickerWindow">
    <Grid>
        <!-- 배경 이미지 -->
        <Image x:Name="CaptureImage" Stretch="Fill"/>
        
        <!-- 반투명 오버레이 (선택되지 않은 영역을 어둡게) - 복잡하므로 단순 사각형만 표시 -->
        <Canvas x:Name="OverlayCanvas">
            <Rectangle x:Name="SelectionRect" Stroke="Red" StrokeThickness="2" Fill="#33FF0000" Visibility="Collapsed"/>
        </Canvas>

        <!-- 안내 -->
        <Border HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" 
                Background="#CC000000" Padding="20,10" CornerRadius="10" IsHitTestVisible="False">
            <TextBlock Text="검색할 영역을 드래그하세요 (ESC: 취소)" Foreground="White" FontSize="20" FontWeight="Bold"/>
        </Border>
    </Grid>
</Window>
