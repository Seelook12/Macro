<UserControl x:Class="Macro.Views.TeachingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Macro.ViewModels"
             xmlns:models="clr-namespace:Macro.Models"
             xmlns:utils="clr-namespace:Macro.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance Type=vm:TeachingViewModel, IsDesignTimeCreatable=False}">

    <UserControl.Resources>
        <!-- Converter (Safety) -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <utils:UriToBitmapConverter x:Key="UriToBitmapConverter"/>

        <!-- ==================================================================== -->
        <!-- [DataTemplates] Condition Models -->
        <!-- ==================================================================== -->
        
        <!-- 1. DelayCondition -->
        <DataTemplate DataType="{x:Type models:DelayCondition}">
            <StackPanel Margin="5">
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Wait Time:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" Text="{Binding DelayTimeMs, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="ms" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </Grid>
                <DockPanel Margin="0,5,0,0">
                    <TextBlock Text="Fail Jump:" VerticalAlignment="Center" Width="70" Foreground="Gray"/>
                    <ComboBox ItemsSource="{Binding DataContext.SequenceNames, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              SelectedItem="{Binding FailJumpName}"/>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

        <!-- 2. ImageMatchCondition -->
        <DataTemplate DataType="{x:Type models:ImageMatchCondition}">
            <StackPanel Margin="5">
                <DockPanel LastChildFill="True" Margin="0,0,0,5">
                    <TextBlock Text="Image:" VerticalAlignment="Center" Width="60"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <Button Content="Pick" Width="40" Margin="5,0,0,0"
                                Command="{Binding DataContext.SelectImageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding .}"
                                ToolTip="Select existing image file"/>
                        <Button Content="Capture" Width="60" Margin="5,0,0,0"
                                Command="{Binding DataContext.CaptureImageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding .}"
                                ToolTip="Snip from screen"/>
                    </StackPanel>
                    <TextBox Text="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" IsReadOnly="True" ToolTip="{Binding ImagePath}"/>
                </DockPanel>

                <!-- Image Preview -->
                <Border BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,5" Height="100" Background="#F8F8F8">
                    <Image Source="{Binding ImagePath, Converter={StaticResource UriToBitmapConverter}}" Stretch="Uniform" ToolTip="Image Preview"/>
                </Border>
                
                <DockPanel LastChildFill="True" Margin="0,0,0,5">
                    <TextBlock Text="Threshold:" VerticalAlignment="Center" Width="60"/>
                    <TextBlock Text="{Binding Threshold, StringFormat=P0}" DockPanel.Dock="Right" Width="40" TextAlignment="Right" VerticalAlignment="Center"/>
                    <Slider Minimum="0.1" Maximum="1.0" Value="{Binding Threshold}" TickFrequency="0.1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                </DockPanel>

                <!-- Test Section -->
                <Border Background="#E3F2FD" CornerRadius="4" Padding="8" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock Text="Match Score: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding TestScore, StringFormat=P1}" Foreground="#1565C0" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Result: " FontWeight="Bold"/>
                                <TextBlock Text="{Binding TestResult}" Foreground="#0D47A1"/>
                            </StackPanel>
                        </StackPanel>
                        <Button Grid.Column="1" Content="ðŸ” Test Match" 
                                Padding="10,5" Background="#2196F3" Foreground="White" FontWeight="Bold"
                                Command="{Binding DataContext.TestImageConditionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding .}"/>
                    </Grid>
                </Border>

                <!-- ROI Settings -->
                <GroupBox Header="Search Region (ROI)" Margin="0,5,0,10">
                    <StackPanel>
                        <CheckBox Content="Use ROI (Region of Interest)" IsChecked="{Binding UseRegion}" Margin="0,0,0,5"/>
                        <Grid IsEnabled="{Binding UseRegion}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Vertical">
                                <UniformGrid Columns="2" Margin="0,0,0,5">
                                    <DockPanel Margin="0,0,5,0">
                                        <TextBlock Text="X:" VerticalAlignment="Center" Width="20" FontWeight="Bold"/>
                                        <TextBox Text="{Binding RegionX, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DockPanel>
                                    <DockPanel>
                                        <TextBlock Text="Y:" VerticalAlignment="Center" Width="20" FontWeight="Bold"/>
                                        <TextBox Text="{Binding RegionY, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DockPanel>
                                </UniformGrid>
                                <UniformGrid Columns="2">
                                    <DockPanel Margin="0,0,5,0">
                                        <TextBlock Text="W:" VerticalAlignment="Center" Width="20" FontWeight="Bold"/>
                                        <TextBox Text="{Binding RegionW, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DockPanel>
                                    <DockPanel>
                                        <TextBlock Text="H:" VerticalAlignment="Center" Width="20" FontWeight="Bold"/>
                                        <TextBox Text="{Binding RegionH, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DockPanel>
                                </UniformGrid>
                            </StackPanel>
                            
                            <Button Grid.Column="1" Content="Pick Region" 
                                    Margin="10,0,0,0" Padding="10,0"
                                    Command="{Binding DataContext.PickRegionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding .}"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <DockPanel>
                    <TextBlock Text="Fail Jump:" VerticalAlignment="Center" Width="70" Foreground="#C62828" FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding DataContext.SequenceNames, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              SelectedItem="{Binding FailJumpName}"/>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

        <!-- 3. GrayChangeCondition -->
        <DataTemplate DataType="{x:Type models:GrayChangeCondition}">
            <StackPanel Margin="5">
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Vertical">
                        <UniformGrid Columns="2" Margin="0,0,0,5">
                            <DockPanel Margin="0,0,5,0">
                                <TextBlock Text="X:" VerticalAlignment="Center" Width="20" FontWeight="Bold"/>
                                <TextBox Text="{Binding X, UpdateSourceTrigger=PropertyChanged}"/>
                            </DockPanel>
                            <DockPanel>
                                <TextBlock Text="Y:" VerticalAlignment="Center" Width="20" FontWeight="Bold"/>
                                <TextBox Text="{Binding Y, UpdateSourceTrigger=PropertyChanged}"/>
                            </DockPanel>
                        </UniformGrid>
                        <UniformGrid Columns="2">
                            <DockPanel Margin="0,0,5,0">
                                <TextBlock Text="W:" VerticalAlignment="Center" Width="20" FontWeight="Bold"/>
                                <TextBox Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}"/>
                            </DockPanel>
                            <DockPanel>
                                <TextBlock Text="H:" VerticalAlignment="Center" Width="20" FontWeight="Bold"/>
                                <TextBox Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}"/>
                            </DockPanel>
                        </UniformGrid>
                    </StackPanel>

                    <Button Grid.Column="1" Content="Pick Region" 
                            Margin="10,0,0,0" Padding="10,0"
                            Command="{Binding DataContext.PickRegionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding .}"/>
                </Grid>

                <UniformGrid Columns="2" Margin="0,0,0,10">
                    <DockPanel Margin="0,0,5,0">
                        <TextBlock Text="Threshold:" VerticalAlignment="Center" Width="70"/>
                        <TextBox Text="{Binding Threshold, UpdateSourceTrigger=PropertyChanged}"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Delay:" VerticalAlignment="Center" Width="45"/>
                        <TextBox Text="{Binding DelayMs, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text="ms" VerticalAlignment="Center" Margin="3,0,0,0"/>
                    </DockPanel>
                </UniformGrid>
                <DockPanel>
                    <TextBlock Text="Fail Jump:" VerticalAlignment="Center" Width="70" Foreground="#C62828" FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding DataContext.SequenceNames, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              SelectedItem="{Binding FailJumpName}"/>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

        <!-- ==================================================================== -->
        <!-- [DataTemplates] Action Models -->
        <!-- ==================================================================== -->

        <!-- 1. IdleAction -->
        <DataTemplate DataType="{x:Type models:IdleAction}">
            <StackPanel Margin="5">
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Idle Time:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" Text="{Binding DelayTimeMs, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="ms" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </Grid>
                <DockPanel Margin="0,5,0,0">
                    <TextBlock Text="Fail Jump:" VerticalAlignment="Center" Width="70" Foreground="Gray"/>
                    <ComboBox ItemsSource="{Binding DataContext.SequenceNames, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              SelectedItem="{Binding FailJumpName}"/>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

        <!-- 2. MouseClickAction -->
        <DataTemplate DataType="{x:Type models:MouseClickAction}">
            <StackPanel Margin="5">
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="X:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="1" Text="{Binding X, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="2" Text="Y:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="3" Text="{Binding Y, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>

                    <Button Grid.Column="4" Content="í˜„ìž¬ìœ„ì¹˜" 
                            Padding="5,0"
                            Command="{Binding DataContext.PickCoordinateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            ToolTip="í™”ë©´ì„ ìº¡ì²˜í•˜ì—¬ í´ë¦­í•œ ìœ„ì¹˜ì˜ ì¢Œí‘œë¥¼ ê°€ì ¸ì˜µë‹ˆë‹¤."/>
                </Grid>
                
                <DockPanel LastChildFill="True" Margin="0,0,0,5">
                    <CheckBox Content="Use Found Coord" IsChecked="{Binding UseConditionAddress}" VerticalAlignment="Center" Margin="0,0,10,0" ToolTip="Pre-Conditionì—ì„œ ì°¾ì€ ì´ë¯¸ì§€ì˜ ì¤‘ì•™ ì¢Œí‘œë¥¼ ì‚¬ìš©í•©ë‹ˆë‹¤."/>
                    <TextBlock Text="Type:" VerticalAlignment="Center" Width="40"/>
                    <ComboBox SelectedValue="{Binding ClickType}" SelectedValuePath="Content">
                        <ComboBoxItem Content="Left"/>
                        <ComboBoxItem Content="Right"/>
                        <ComboBoxItem Content="Double"/>
                    </ComboBox>
                </DockPanel>

                <DockPanel>
                    <TextBlock Text="Fail Jump:" VerticalAlignment="Center" Width="70" Foreground="Gray"/>
                    <ComboBox ItemsSource="{Binding DataContext.SequenceNames, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              SelectedItem="{Binding FailJumpName}"/>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

        <!-- 3. KeyPressAction -->
        <DataTemplate DataType="{x:Type models:KeyPressAction}">
            <StackPanel Margin="5">
                <DockPanel LastChildFill="True" Margin="0,0,0,5">
                    <TextBlock Text="Key Code:" VerticalAlignment="Center" Width="70"/>
                    <TextBox Text="{Binding KeyCode, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>
                <DockPanel>
                    <TextBlock Text="Fail Jump:" VerticalAlignment="Center" Width="70" Foreground="Gray"/>
                    <ComboBox ItemsSource="{Binding DataContext.SequenceNames, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              SelectedItem="{Binding FailJumpName}"/>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Sequence List -->
        <Grid Grid.Column="0" Background="#F0F0F0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="10">
                <TextBlock Text="Sequence List" FontWeight="Bold"/>
                <TextBlock Text="{Binding CurrentRecipeName, StringFormat='Recipe: {0}'}" FontSize="12" Foreground="Gray" Margin="0,2,0,0"/>
            </StackPanel>

            <ListBox Grid.Row="1" 
                     ItemsSource="{Binding Sequences}" 
                     SelectedItem="{Binding SelectedSequence}"
                     Margin="5"
                     HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <CheckBox Grid.Column="0" IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center"/>
                            
                            <Button Grid.Column="2" Content="â–¶" 
                                    Width="25" Height="25"
                                    Padding="0"
                                    ToolTip="Run this step only"
                                    Command="{Binding DataContext.RunSingleStepCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding .}"
                                    Background="Transparent" BorderThickness="0" Foreground="#2D8A3E" FontWeight="Bold"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Save" Command="{Binding SaveCommand}" Padding="15,5" Margin="0,0,5,0" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
                <Button Content="Add" Command="{Binding AddSequenceCommand}" Padding="15,5" Margin="0,0,5,0"/>
                <Button Content="Remove" Command="{Binding RemoveSequenceCommand}" Padding="15,5"/>
            </StackPanel>
        </Grid>

        <!-- Right: Detail Editor -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" DataContext="{Binding SelectedSequence}">
                 <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Hidden"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <TextBlock Text="Step Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                <DockPanel LastChildFill="True" Margin="0,0,0,10">
                    <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0,0,10,0" Width="50"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>

                <UniformGrid Columns="3" Margin="0,0,0,20">
                    <DockPanel Margin="0,0,10,0">
                        <TextBlock Text="Repeat:" VerticalAlignment="Center" Margin="0,0,5,0" Width="50"/>
                        <TextBox Text="{Binding RepeatCount, UpdateSourceTrigger=PropertyChanged}"/>
                    </DockPanel>
                    <DockPanel Margin="0,0,10,0">
                        <TextBlock Text="Retry:" VerticalAlignment="Center" Margin="0,0,5,0" Width="40"/>
                        <TextBox Text="{Binding RetryCount, UpdateSourceTrigger=PropertyChanged}"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Delay:" VerticalAlignment="Center" Margin="0,0,5,0" Width="40"/>
                        <TextBox Text="{Binding RetryDelayMs, UpdateSourceTrigger=PropertyChanged}" ToolTip="Retry delay in milliseconds"/>
                        <TextBlock Text="ms" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </DockPanel>
                </UniformGrid>
            </StackPanel>

            <!-- ScrollViewer for 3-Step Edit -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                 <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedSequence}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Hidden"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ScrollViewer.Style>

                <StackPanel>
                    
                    <!-- Step 1: Pre-Condition -->
                    <GroupBox Header="1. Start Condition (Pre-Condition)" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <DockPanel LastChildFill="True" Margin="0,0,0,10">
                                <TextBlock Text="Condition Type:" VerticalAlignment="Center" Width="100"/>
                                <ComboBox ItemsSource="{Binding ConditionTypes}" 
                                          SelectedItem="{Binding SelectedPreConditionType, Mode=TwoWay}"/>
                            </DockPanel>
                            
                            <!-- Dynamic Content -->
                            <ContentControl Content="{Binding SelectedSequence.PreCondition}"
                                            BorderBrush="LightGray" BorderThickness="1" Padding="5"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Step 2: Action -->
                    <GroupBox Header="2. Action (Behavior)" Margin="0,0,0,15" Padding="10" BorderBrush="#2196F3">
                        <StackPanel>
                            <DockPanel LastChildFill="True" Margin="0,0,0,10">
                                <TextBlock Text="Action Type:" VerticalAlignment="Center" Width="100"/>
                                <ComboBox ItemsSource="{Binding ActionTypes}" 
                                          SelectedItem="{Binding SelectedActionType, Mode=TwoWay}"/>
                            </DockPanel>

                            <!-- Dynamic Content -->
                            <ContentControl Content="{Binding SelectedSequence.Action}"
                                            BorderBrush="LightGray" BorderThickness="1" Padding="5"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Step 3: Post-Condition & Flow Control -->
                    <GroupBox Header="3. Complete Check &amp; Flow Control" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <DockPanel LastChildFill="True" Margin="0,0,0,10">
                                <TextBlock Text="Condition Type:" VerticalAlignment="Center" Width="100"/>
                                <ComboBox ItemsSource="{Binding ConditionTypes}" 
                                          SelectedItem="{Binding SelectedPostConditionType, Mode=TwoWay}"/>
                            </DockPanel>

                            <!-- Dynamic Content -->
                            <ContentControl Content="{Binding SelectedSequence.PostCondition}"
                                            BorderBrush="LightGray" BorderThickness="1" Padding="5" Margin="0,0,0,10"/>

                            <Separator Margin="0,5,0,10"/>

                            <Grid DataContext="{Binding SelectedSequence}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="[SUCCESS] Flow Control (Next Step)" Foreground="#2E7D32" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding DataContext.SequenceNames, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              SelectedItem="{Binding DataContext.SuccessJumpTarget, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Visibility="Collapsed">
                                    <!-- SequenceItem ë ˆë²¨ì˜ FailJumpNameì€ ì´ì œ ì‚¬ìš©í•˜ì§€ ì•Šìœ¼ë¯€ë¡œ ìˆ¨ê¹€ -->
                                    <TextBlock Text="If FAIL (Jump/Stop)" Foreground="#C62828" FontWeight="Bold" Margin="0,0,0,5"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                </StackPanel>
            </ScrollViewer>

            <!-- Placeholder -->
            <TextBlock Grid.Row="1" Text="Select a step to edit details" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" FontSize="16">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedSequence}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

        </Grid>
    </Grid>
</UserControl>