<UserControl x:Class="Macro.Views.TeachingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Macro.ViewModels"
             xmlns:models="clr-namespace:Macro.Models"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance Type=vm:TeachingViewModel, IsDesignTimeCreatable=False}">

    <UserControl.Resources>
        <!-- Converter (Safety) -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- ==================================================================== -->
        <!-- [DataTemplates] Condition Models -->
        <!-- ==================================================================== -->
        
        <!-- 1. DelayCondition -->
        <DataTemplate DataType="{x:Type models:DelayCondition}">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Wait Time:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" Text="{Binding DelayTimeMs, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="ms" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </Grid>
        </DataTemplate>

        <!-- 2. ImageMatchCondition -->
        <DataTemplate DataType="{x:Type models:ImageMatchCondition}">
            <StackPanel Margin="5">
                <DockPanel LastChildFill="True" Margin="0,0,0,5">
                    <TextBlock Text="Image:" VerticalAlignment="Center" Width="60"/>
                    <Button Content="..." DockPanel.Dock="Right" Width="30" Margin="5,0,0,0"/>
                    <TextBox Text="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                </DockPanel>
                
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Threshold:" VerticalAlignment="Center" Width="60"/>
                    <TextBlock Text="{Binding Threshold, StringFormat=P0}" DockPanel.Dock="Right" Width="40" TextAlignment="Right" VerticalAlignment="Center"/>
                    <Slider Minimum="0.1" Maximum="1.0" Value="{Binding Threshold}" TickFrequency="0.1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

        <!-- ==================================================================== -->
        <!-- [DataTemplates] Action Models -->
        <!-- ==================================================================== -->

        <!-- 1. MouseClickAction -->
        <DataTemplate DataType="{x:Type models:MouseClickAction}">
            <StackPanel Margin="5">
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="X:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="1" Text="{Binding X, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="2" Text="Y:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="3" Text="{Binding Y, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Type:" VerticalAlignment="Center" Width="40"/>
                    <ComboBox SelectedValue="{Binding ClickType}" SelectedValuePath="Content">
                        <ComboBoxItem Content="Left"/>
                        <ComboBoxItem Content="Right"/>
                        <ComboBoxItem Content="Double"/>
                    </ComboBox>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

        <!-- 2. KeyPressAction -->
        <DataTemplate DataType="{x:Type models:KeyPressAction}">
            <StackPanel Margin="5">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Key Code:" VerticalAlignment="Center" Width="70"/>
                    <TextBox Text="{Binding KeyCode, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Sequence List -->
        <Grid Grid.Column="0" Background="#F0F0F0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="10">
                <TextBlock Text="Sequence List" FontWeight="Bold"/>
                <TextBlock Text="{Binding CurrentRecipeName, StringFormat='Recipe: {0}'}" FontSize="12" Foreground="Gray" Margin="0,2,0,0"/>
            </StackPanel>

            <ListBox Grid.Row="1" 
                     ItemsSource="{Binding Sequences}" 
                     SelectedItem="{Binding SelectedSequence}"
                     Margin="5">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Save" Command="{Binding SaveCommand}" Padding="15,5" Margin="0,0,5,0" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
                <Button Content="Add" Command="{Binding AddSequenceCommand}" Padding="15,5" Margin="0,0,5,0"/>
                <Button Content="Remove" Command="{Binding RemoveSequenceCommand}" Padding="15,5"/>
            </StackPanel>
        </Grid>

        <!-- Right: Detail Editor -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" DataContext="{Binding SelectedSequence}">
                 <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Hidden"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <TextBlock Text="Step Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                <DockPanel LastChildFill="True" Margin="0,0,0,20">
                    <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>
            </StackPanel>

            <!-- ScrollViewer for 3-Step Edit -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                 <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedSequence}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Hidden"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ScrollViewer.Style>

                <StackPanel>
                    
                    <!-- Step 1: Pre-Condition -->
                    <GroupBox Header="1. Start Condition (Pre-Condition)" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <DockPanel LastChildFill="True" Margin="0,0,0,10">
                                <TextBlock Text="Condition Type:" VerticalAlignment="Center" Width="100"/>
                                <ComboBox ItemsSource="{Binding ConditionTypes}" 
                                          SelectedItem="{Binding SelectedPreConditionType, Mode=TwoWay}"/>
                            </DockPanel>
                            
                            <!-- Dynamic Content -->
                            <ContentControl Content="{Binding SelectedSequence.PreCondition}"
                                            BorderBrush="LightGray" BorderThickness="1" Padding="5"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Step 2: Action -->
                    <GroupBox Header="2. Action (Behavior)" Margin="0,0,0,15" Padding="10" BorderBrush="#2196F3">
                        <StackPanel>
                            <DockPanel LastChildFill="True" Margin="0,0,0,10">
                                <TextBlock Text="Action Type:" VerticalAlignment="Center" Width="100"/>
                                <ComboBox ItemsSource="{Binding ActionTypes}" 
                                          SelectedItem="{Binding SelectedActionType, Mode=TwoWay}"/>
                            </DockPanel>

                            <!-- Dynamic Content -->
                            <ContentControl Content="{Binding SelectedSequence.Action}"
                                            BorderBrush="LightGray" BorderThickness="1" Padding="5"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Step 3: Post-Condition -->
                    <GroupBox Header="3. Complete Check (Post-Condition)" Margin="0,0,0,15" Padding="10">
                        <StackPanel>
                            <DockPanel LastChildFill="True" Margin="0,0,0,10">
                                <TextBlock Text="Condition Type:" VerticalAlignment="Center" Width="100"/>
                                <ComboBox ItemsSource="{Binding ConditionTypes}" 
                                          SelectedItem="{Binding SelectedPostConditionType, Mode=TwoWay}"/>
                            </DockPanel>

                            <!-- Dynamic Content -->
                            <ContentControl Content="{Binding SelectedSequence.PostCondition}"
                                            BorderBrush="LightGray" BorderThickness="1" Padding="5"/>
                        </StackPanel>
                    </GroupBox>
                    
                </StackPanel>
            </ScrollViewer>

            <!-- Placeholder -->
            <TextBlock Grid.Row="1" Text="Select a step to edit details" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" FontSize="16">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedSequence}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

        </Grid>
    </Grid>
</UserControl>