<UserControl x:Class="Macro.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Macro.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:DashboardViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Control Panel -->
        <Border Grid.Row="0" Background="#252526" Padding="20,15" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="DASHBOARD" Foreground="#007ACC" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    
                    <StackPanel Orientation="Horizontal" Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Border Background="#3E3E42" CornerRadius="4" Padding="8,4" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="STEP " Foreground="#D4D4D4" FontSize="12"/>
                                <TextBlock Text="{Binding CurrentStepIndex, Mode=OneWay}" Foreground="White" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text=" / " Foreground="#D4D4D4" FontSize="12"/>
                                <TextBlock Text="{Binding TotalStepCount, Mode=OneWay}" Foreground="#D4D4D4" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding RunCommand}" 
                            Width="100" Height="35" 
                            Margin="0,0,10,0"
                            Foreground="White" FontWeight="Bold" BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Content" Value="â–¶ ì‹¤í–‰"/>
                                <Setter Property="Background" Value="#2D8A3E"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPaused}" Value="True">
                                        <Setter Property="Content" Value="â–¶ ìž¬ê°œ"/>
                                        <Setter Property="Background" Value="#E0A800"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Command="{Binding PauseCommand}" 
                            Content="â¸ ì¼ì‹œì •ì§€" 
                            Width="100" Height="35" 
                            Margin="0,0,10,0"
                            Background="#D97706" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
                    
                    <Button Command="{Binding StopCommand}" 
                            Content="â–  ì¤‘ì§€" 
                            Width="100" Height="35" 
                            Background="#C42B1C" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Progress Bar (Only visible when running) -->
        <ProgressBar Grid.Row="0" VerticalAlignment="Bottom" Height="3" BorderThickness="0" Background="Transparent" Foreground="#007ACC"
                     Minimum="0" Maximum="{Binding TotalStepCount, Mode=OneWay}" Value="{Binding CurrentStepIndex, Mode=OneWay}"
                     Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Status Panel (Timeout + Current Step) -->
                <RowDefinition Height="*"/>    <!-- Log Area -->
            </Grid.RowDefinitions>

            <!-- Status Panel -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10" Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
                
                <!-- Current Active Step Card -->
                <Border Background="#252526" BorderBrush="#007ACC" BorderThickness="1,1,1,4" CornerRadius="4" Padding="15,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header Line -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="ðŸš€ RUNNING" Foreground="#007ACC" FontWeight="Bold" Margin="0,0,15,0"/>
                                <Border Background="#3E3E42" CornerRadius="4" Padding="8,3">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding CurrentStepIndex}" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock Text=" / " Foreground="Gray"/>
                                        <TextBlock Text="{Binding TotalStepCount}" Foreground="Gray"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            
                            <TextBlock Grid.Column="1" Text="{Binding CurrentStepName}" 
                                       Foreground="White" FontWeight="Bold" FontSize="16" 
                                       Margin="20,0,0,0" VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"/>
                        </Grid>
                        
                        <!-- Detail Status Line -->
                        <Grid Grid.Row="1" Background="#2D2D30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Pre Condition -->
                            <Border Grid.Column="0" Padding="10" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
                                <StackPanel>
                                    <TextBlock Text="ì‹œìž‘ ì¡°ê±´" Foreground="Gray" FontSize="11" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding PreConditionStatus}" Foreground="#D4D4D4" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Arrow -->
                            <TextBlock Grid.Column="1" Text="â–¶" Foreground="Gray" VerticalAlignment="Center" Margin="10,0"/>

                            <!-- Action -->
                            <Border Grid.Column="2" Padding="10" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
                                <StackPanel>
                                    <TextBlock Text="ë™ìž‘ (Action)" Foreground="Gray" FontSize="11" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding ActionStatus}" Foreground="#D4D4D4" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Border>

                            <!-- Arrow -->
                            <TextBlock Grid.Column="3" Text="â–¶" Foreground="Gray" VerticalAlignment="Center" Margin="10,0"/>

                            <!-- Post Condition -->
                            <Border Grid.Column="4" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="ì™„ë£Œ í™•ì¸" Foreground="Gray" FontSize="11" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding PostConditionStatus}" Foreground="#D4D4D4" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Timeout Status Panel -->
                <ItemsControl ItemsSource="{Binding ActiveTimeouts}" Margin="0,10,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#333333" BorderBrush="#FF9800" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="â³ Timeout: " Foreground="#FF9800" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding GroupName}" Foreground="White" FontWeight="SemiBold" Margin="5,0"/>
                                        
                                        <!-- Added Step Name Display -->
                                        <Border Background="#444" CornerRadius="3" Padding="4,1" Margin="5,0">
                                            <TextBlock Text="{Binding StepName}" Foreground="#DDD" FontSize="11"/>
                                        </Border>
                                        
                                        <TextBlock Text=" (" Foreground="Gray" Margin="5,0,0,0"/>
                                        <TextBlock Text="{Binding ElapsedMs, StringFormat=N0}" Foreground="#CCCCCC"/>
                                        <TextBlock Text=" / " Foreground="Gray"/>
                                        <TextBlock Text="{Binding TotalMs, StringFormat=N0}" Foreground="#CCCCCC"/>
                                        <TextBlock Text=" ms)" Foreground="Gray"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding RemainingMs, StringFormat=N0}" Foreground="#FF9800" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text=" ms left" Foreground="#FF9800" FontSize="12" VerticalAlignment="Bottom" Margin="2,0,0,1"/>
                                    </StackPanel>
                                    
                                    <!-- Background Progress -->
                                    <ProgressBar Grid.ColumnSpan="2" VerticalAlignment="Bottom" Height="2" 
                                                 Minimum="0" Maximum="{Binding TotalMs}" Value="{Binding ElapsedMs}"
                                                 Background="Transparent" Foreground="#FF9800" BorderThickness="0" Opacity="0.5"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Log Area -->
            <Border Grid.Row="1" Background="#1E1E1E" BorderBrush="#3F3F46" BorderThickness="1">
                <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Background="#2D2D30" Padding="10,5">
                    <TextBlock Text="ì‹¤í–‰ ë¡œê·¸ (Execution Logs)" Foreground="#D4D4D4" FontWeight="SemiBold"/>
                </Border>
                
                <ListBox x:Name="LogListBox" Grid.Row="1" 
                         ItemsSource="{Binding Logs}" 
                         Background="#1E1E1E" BorderThickness="0"
                         Foreground="#D4D4D4" FontFamily="Consolas" FontSize="13"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="5,2"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>
        
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ìƒíƒœ: " Foreground="White" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White"/>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>