<UserControl x:Class="Macro.Views.Controls.DynamicIntInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Macro.Views.Controls"
             xmlns:comp="clr-namespace:Macro.Views.Components"
             xmlns:utils="clr-namespace:Macro.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
    <UserControl.Resources>
        <utils:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        
        <!-- Icon Data -->
        <Geometry x:Key="IconConstant">M3,11H21V13H3V11M3,18H21V20H3V18M10,21H12V3H10V21M17,21H19V3H17V21Z</Geometry>
        <Geometry x:Key="IconVariable">M5,3H8V5H5V19H8V21H5V3M21,3V21H18V19H21V5H18V3H21M11,10H14V11H11V10M11,13H14V14H11V13Z</Geometry>

        <!-- Toggle Button Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="4" Background="{TemplateBinding Background}">
                            <Viewbox Margin="6">
                                <Path x:Name="path" Data="{StaticResource IconConstant}" Fill="#888888" Stretch="Uniform"/>
                            </Viewbox>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding SourceType, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Constant}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                <Setter TargetName="path" Property="Data" Value="{StaticResource IconConstant}"/>
                                <Setter TargetName="path" Property="Fill" Value="#555555"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding SourceType, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Variable}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E3F2FD"/>
                                <Setter TargetName="path" Property="Data" Value="{StaticResource IconVariable}"/>
                                <Setter TargetName="path" Property="Fill" Value="#1976D2"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Toggle Button -->
        <Button Grid.Column="0" 
                Style="{StaticResource ToggleButtonStyle}"
                Margin="0,0,4,0"
                Click="ToggleButton_Click"
                ToolTip="Click to switch input mode (Constant to Variable)"/>

        <!-- Input Area -->
        <Grid Grid.Column="1">
            <!-- Constant Input (TextBox) -->
            <TextBox Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center">
                <TextBox.Style>
                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                             <DataTrigger Binding="{Binding SourceType, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Constant}" Value="True">
                                 <Setter Property="Visibility" Value="Visible"/>
                             </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- Variable Input (VariableSelector) -->
            <comp:VariableSelector 
                Text="{Binding VariableName, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                ItemsSource="{Binding VariableSource, RelativeSource={RelativeSource AncestorType=UserControl}}">
                 <comp:VariableSelector.Style>
                    <Style TargetType="comp:VariableSelector">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                             <DataTrigger Binding="{Binding SourceType, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Variable}" Value="True">
                                 <Setter Property="Visibility" Value="Visible"/>
                             </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </comp:VariableSelector.Style>
            </comp:VariableSelector>
        </Grid>
    </Grid>
</UserControl>