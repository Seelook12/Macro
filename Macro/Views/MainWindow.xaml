<rxui:ReactiveWindow x:Class="Macro.Views.MainWindow"
        x:TypeArguments="vm:MainWindowViewModel"
        xmlns:rxui="clr-namespace:ReactiveUI;assembly=ReactiveUI.Wpf"
        xmlns:vm="clr-namespace:Macro.ViewModels"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Macro Automation" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 네비게이션 영역 -->
            <RowDefinition Height="*"/>    <!-- 컨텐츠 영역 -->
        </Grid.RowDefinitions>

        <!-- 상단 네비게이션 바 -->
        <DockPanel Grid.Row="0" Background="#333" Height="50" LastChildFill="False">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Content="실행 (대시보드)" Command="{Binding GoDashboard}" Width="120" Margin="10,5"/>
                <Button Content="레시피 관리" Command="{Binding GoRecipe}" Width="120" Margin="5"/>
                <Button Content="티칭 (동작생성)" Command="{Binding GoTeaching}" Width="120" Margin="5"/>
            </StackPanel>
            
            <TextBlock Text="{Binding CurrentRecipeName}" 
                       DockPanel.Dock="Right" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       Margin="0,0,20,0" 
                       FontWeight="Bold" 
                       FontSize="14"/>
        </DockPanel>

        <!-- 중앙 컨텐츠 영역 (라우팅된 뷰가 표시됨) -->
        <rxui:RoutedViewHost x:Name="RoutedViewHost" Grid.Row="1" Router="{Binding Router}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <rxui:RoutedViewHost.DefaultContent>
                <TextBlock Text="화면을 불러오는 중입니다..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </rxui:RoutedViewHost.DefaultContent>
        </rxui:RoutedViewHost>
    </Grid>
</rxui:ReactiveWindow>