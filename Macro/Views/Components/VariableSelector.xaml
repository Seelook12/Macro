<UserControl x:Class="Macro.Views.Components.VariableSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Macro.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
    
    <ComboBox x:Name="Part_ComboBox"
              IsEditable="True"
              ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=local:VariableSelector}}"
              Text="{Binding Text, RelativeSource={RelativeSource AncestorType=local:VariableSelector}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
              DisplayMemberPath="{Binding DisplayMemberPath, RelativeSource={RelativeSource AncestorType=local:VariableSelector}}"
              SelectedValuePath="{Binding SelectedValuePath, RelativeSource={RelativeSource AncestorType=local:VariableSelector}}">
        <ComboBox.Style>
            <Style TargetType="ComboBox">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
        </ComboBox.Style>
    </ComboBox>
</UserControl>
